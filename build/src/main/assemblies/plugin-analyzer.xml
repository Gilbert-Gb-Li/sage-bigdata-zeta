<assembly>
    <id>plugin_${maven.build.timestamp}</id>
    <formats>
        <format>tar.gz</format>
        <!--
        <format>tar.gz</format>
        -->
    </formats>
    <files>
        <file>
            <source>../build/src/main/scripts/plugin/install-plugin.sh</source>
            <outputDirectory>bin</outputDirectory>
            <destName>install.sh</destName>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>../build/src/main/scripts/plugin/install-plugin.bat</source>
            <outputDirectory>bin</outputDirectory>
            <destName>install.bat</destName>
            <fileMode>0755</fileMode>
            <lineEnding>windows</lineEnding>
        </file>
        <file>
            <source>src/main/resources/${project.artifactId}.conf.template</source>
            <outputDirectory>conf</outputDirectory>
            <destName>${project.artifactId}.conf</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/**</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>*.template</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>*:flink-*:*</include>
            </includes>
            <!--<excludes>-->
                <!--<exclude>*:flink-shaded-hadoop2:*</exclude>-->
            <!--</excludes>-->
        </dependencySet>
    </dependencySets>
</assembly>