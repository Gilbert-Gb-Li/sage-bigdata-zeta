    <modelVersion>4.0.0</modelVersion>
    <artifactId>sage-bigdata-zeta-analyzer-modeling</artifactId>
    <dependencies>
        <dependency>
            <groupId>com.haima.sage.bigdata.etl</groupId>
            <artifactId>sage-bigdata-zeta-analyzer-flink</artifactId>
